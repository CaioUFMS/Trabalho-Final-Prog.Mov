<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelecaoFuncao">

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:hint="UsuÃ¡rio"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtVendas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:hint="Vendas"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnRealizarVenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:onClick="realizarVenda"
            android:text="Nova Venda"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnManejarEstoque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:onClick="manejarEstoque"
            android:text="Manejar Estoque"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnAdicionarProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:onClick="adicionarProduto"
            android:text="Novo Produto"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>